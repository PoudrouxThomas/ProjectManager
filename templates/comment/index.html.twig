{% extends 'base.html.twig' %}

{% block title %}Edit comment{% endblock %}

{% block body %}

<div class="max-w-md mx-auto">
    <h1 class="p-2 text-center text-3xl italic underline font-bold">Edit your comment</h1>

    {{ form_errors(form) }}

    {{ form_start(form) }}
        {{ form_row(form.content, {
            label: 'Comment'
        }) }}

        <button type="submit"  class="mt-4 w-full bg-orange-500 hover:bg-orange-600 text-white rounded shadow p-4 block">Update</button>
    {{ form_end(form) }}
</div>
{% endblock %}
